		{
			"name": "GetUser",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"pm.test(\"User id is the expected\", function () {\r",
							"    pm.expect(jsonData.id.toString()).to.equal(pm.environment.get('userID'));\r",
							"});\r",
							"\r",
							"pm.test(\"User name is the expected\", function () {\r",
							"    pm.expect(jsonData.username).to.equal(pm.environment.get('userName'));\r",
							"});\r",
							"\r",
							"pm.test(\"User firstName is the expected\", function () {\r",
							"    pm.expect(jsonData.firstName).to.equal(pm.environment.get('firstName'));\r",
							"});\r",
							"\r",
							"pm.test(\"User lastName is the expected\", function () {\r",
							"    pm.expect(jsonData.lastName).to.equal(pm.environment.get('lastName'));\r",
							"});\r",
							"\r",
							"pm.test(\"User email is the expected\", function () {\r",
							"    pm.expect(jsonData.email).to.equal(pm.environment.get('email'));\r",
							"});\r",
							"\r",
							"pm.test(\"User password is the expected\", function () {\r",
							"    pm.expect(jsonData.password).to.equal(pm.environment.get('password'));\r",
							"});\r",
							"\r",
							"pm.test(\"User phone is the expected\", function () {\r",
							"    pm.expect(jsonData.phone).to.equal(pm.environment.get('phone'));\r",
							"});\r",
							"\r",
							"pm.test(\"User userStatus is the expected\", function () {\r",
							"    pm.expect(jsonData.userStatus.toString()).to.equal(pm.environment.get('userStatus'));\r",
							"});\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
