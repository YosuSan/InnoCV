				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const randomNum = Math.floor(Math.random() * 10000);",
							"pm.environment.set('firstName', 'Mari Carmen ' + randomNum);",
							"pm.environment.set('lastName', 'Apellido ' + randomNum);",
							"pm.environment.set('email', `MariCarmen${randomNum}@example.com`);",
							"pm.environment.set('password', `Password${randomNum}`);",
							"pm.environment.set('phone', `+3466666${randomNum}`);",
							"pm.environment.set('userStatus', '1');"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
